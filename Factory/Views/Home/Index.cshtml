@{
  Layout = "_Layout";
}

@using Factory.Models

<h1>Sillystringz Factory</h1>
<hr>

<div class="basic">
  <h4>Machines</h4>
  @if (Model["machines"].Length == 0)
  {
    <p>No machines have been added yet!</p>
  }
  <ul>
    @foreach (Machine machine in Model["machines"])
    {
      <li>@Html.ActionLink(machine.Name, "Details", "Machines", new { id = machine.MachineId})</li>
    }
  </ul>

  <p>@Html.ActionLink("Add new Machine", "Create", "Machines")</p>
  <p>@Html.ActionLink("See list of Machines", "Index", "Machines")</p>
</div>

<div class="basic">
  <h4>Engineers</h4>
  @if (Model["engineers"].Length == 0)
  {
    <p>No engineers have been added yet!</p>
  }
  <ul>
    @foreach (Engineer engineer in Model["engineers"])
    {
      <li>@Html.ActionLink(@engineer.Name, "Details", "Engineers", new { id = @engineer.EngineerId})</li>
    }
  </ul>

  <p>@Html.ActionLink("Add new Engineer", "Create", "Engineers")</p>
  <p>@Html.ActionLink("See list of Engineers", "Index", "Engineers")</p>
</div>

<hr>